Cmnd_Alias	INTERNETENABLE = /usr/bin/internet_enable
linux-fan	ALL=NOPASSWD: INTERNETENABLE
Cmnd_Alias	INTERNETDISABLE = /usr/bin/internet_disable
linux-fan	ALL=NOPASSWD: INTERNETDISABLE
